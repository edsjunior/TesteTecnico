<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Linx - Teste Prático</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div id="header" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Linx Test", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Exercicio 1 e 2", "Exercicio1", "Pessoas")</li>
                    <li>@Html.ActionLink("Exercicio 3", "Exercicio3", "Pessoas")</li>
                    <li>@Html.ActionLink("Exercicio 4", "Exercicio4", "Pessoas")</li>
                    <li>@Html.ActionLink("Exercicio 7", "Exercicio7", "Pessoas")</li>
                </ul>
            </div>
        </div>
    </div>

    <div id="container">
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>

    <div id="footer" class="navbar navbar-inverse navbar-fixed-bottom">
        <footer>
            <p>&copy;Copyright 2018 - Hands-on by Esdras Marcelino </p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
